    (fconst-funcdecl fconst fdecl)
    (func_type_return {func_ty fdecl} "ptr")]
[(fconst-ret-val fconst)
    <--
    (fconst-funcdecl fconst _)
    (~ fconst-ret-ptr fconst)
    (~ fconst-ret-void fconst)]

